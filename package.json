{
  "name": "race-review-platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npx next dev",
    "build": "npx next build",
    "start": "npx next start",
    "lint": "npx next lint",
    "format": "prettier --write .",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:dev": "cypress open",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "scrape": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/scrape.ts",
    "scrape:dry": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/scrape.ts --dry-run",
    "scrape:force": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/scrape.ts --force",
    "scrape:logs": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/scrape-logs.ts",
    "dev:tasks": "ts-node src/lib/tasks/setupTasks.ts",
    "setup": "npm install && npm run db:reset && npm run db:seed",
    "validate": "npm run lint && npm run type-check && npm run test",
    "dev:full": "concurrently \"npm run dev\" \"npm run db:studio\""
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.0",
    "@prisma/client": "^5.0.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "cron": "^3.0.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.460.0",
    "next": "14.0.0",
    "next-auth": "^4.24.0",
    "puppeteer": "^21.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "concurrently": "^8.0.0",
    "cypress": "^13.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "prisma": "^5.0.0",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
